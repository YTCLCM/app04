<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.app04.dao.CourseMapper">

	<!-- 查询所有Course -->
	<select id="findAll" resultType="com.briup.app04.bean.Course2">
		select * 
		from course
	</select>
	
	<!-- 按ID查询Course -->
	<select id="findById" parameterType="Long"
		resultType="com.briup.app04.bean.Course2">
		select * 
		from course 
		where id=#{id}
	</select>

	<update id="update" parameterType="com.briup.app04.bean.Course2">
		update course 
		set name=#{name},credit=#{credit},description=#{description}
		where id=#{id}
	</update>

	<insert id="inserts" parameterType="com.briup.app04.bean.Course2">
			insert 
			into course 
		<foreach item="item" collection="course" separator=",">
			values(#{item.id}, #{item.name}, #{item.credit}, #{item.description})
		</foreach>
	</insert>

	<insert id="insert" parameterType="com.briup.app04.bean.Course2">
		insert into 
		course values
		(#{id},#{name},#{credit},#{description})
	</insert>

	<delete id="delete" parameterType="Long">
		delete 
		from course 
		where id=#{id}
	</delete>
</mapper> 